<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
       
    </style> -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Jooks">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/JooksActionBar</item>
        <!-- <item name="android:actionBarTabStyle">@style/JooksActionBarTabStyle</item> -->
        <!-- <item name="android:actionBarTabTextStyle">@style/JooksActionBarTabTextStyle</item> -->
        <item name="android:actionBarTabStyle">@style/JooksActionBarTabStyle</item>
    </style>
    
    <style name="JooksActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:height">50dp</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    
    <style name="JooksActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:background">@color/middlebar_bg</item>
        <item name="android:textColor">@color/middlebar_textcolor</item>
        <item name="android:textColorHighlight">#CCCCCC</item>
    </style>
    
    <style name="JooksActionBarTabTextStyle" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/middlebar_textcolor</item>
        <item name="android:textColorHighlight">#CCCCCC</item>
    </style>
    
    <style name="JooksActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@color/actionbar_bg</item>
    </style>
    
    <style name="Theme.Jooks" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_jooks</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Jooks</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Jooks</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Jooks</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Jooks</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Jooks</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_jooks</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_jooks</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Jooks</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Jooks</item>
    </style>
    <style name="ActionBar.Solid.Jooks" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_jooks</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_jooks</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_jooks</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Jooks</item>
        <item name="android:height">50dp</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="ActionBar.Transparent.Jooks" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_jooks</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Jooks</item>
    </style>
    <style name="PopupMenu.Jooks" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_jooks</item>
        
    </style>
    <style name="DropDownListView.Jooks" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_jooks</item>
    </style>
    <style name="ActionBarTabStyle.Jooks" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_jooks</item>
    </style>
    <style name="DropDownNav.Jooks" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_jooks</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_jooks</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_jooks</item>
    </style>
    <style name="ProgressBar.Jooks" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_jooks</item>
        
    </style>
    <style name="ActionButton.CloseMode.Jooks" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_jooks</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Jooks.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Jooks</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Jooks</item>
    </style>
    <style name="ActionBarTabTextStyle.Jooks" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/middlebar_textcolor</item>
    </style>
</resources>
