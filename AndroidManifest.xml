<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.jooks.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_jooks"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.jooks.client.SplashScreenActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="com.facebook.LoginActivity" />
        
        <activity
            android:name="me.jooks.client.DashboardActivity"
            android:label="@string/title_activity_fblogin" >
        </activity>
        <activity
            android:name="me.jooks.client.FBLoginFragment"
            android:label="@string/title_activity_fblogin_fragment" >
        </activity>
        <activity
            android:name="me.jooks.client.ProfileFragment"
            android:label="@string/title_activity_profile" >
        </activity>
    </application>

</manifest>
